            <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='calendar']" position="after">
                    <group name="tiempo_limite" string="LÃ­mite de Tiempo">
